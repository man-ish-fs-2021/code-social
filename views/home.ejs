<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="/css/chat_box.css">


<div id="home-container">
    <%if(locals.user){%>
    <section id="friends-container">
        <h4>
            Friends
        </h4>
        <% if(user_friends.length==0){%>
        <p>
            No friends yet
        </p>
        <%}else{%>
        <% for(let friends of user_friends){ %>
        <p>
            <a href="/users/profile/<%=friends.friend_id%>"><%= friends.friend_name %></a>
        </p>
        <%}%>
            <%}%>
    </section>
    <%}%>
    <section id="feed-posts">
            <h4>Posts</h4>
            <% if(locals.user){ %>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3" placeholder="Type Here..." required></textarea>
        <input type="submit" value="Post">
    </form>
    <% } %>

    <div id="posts-list-container">
        <ul>
            <% for(post of posts){ %>

            <%- include('_post') -%>

            <%} %>
        </ul>
    </div>
    </section>


    <section id="users-container">
        <h4>Users</h4>
        <% for(u of all_users){%>
        <p>
            <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
        </p>
        <% } %>
    </section>


    <%- include('_chat_box') -%>

</div>

<script src="/js/home_post_comments.js"></script>
<script src="/js/home_posts.js"></script>

<script src="/js/toggle_like.js"></script>

<script>
    $(" .like-button").each(function () {
        let self = this;
        let toggleLike = new ToggleLike(self);
    });
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.3/socket.io.js"></script>
<script src="/js/chat_engine.js"></script>
<%if(locals.user){%>
<script>
    new ChatEngine("user-chat-box", "<%= locals.user.email %>");
</script>
<%}%>